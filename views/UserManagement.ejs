<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.lordicon.com/pzdvqjsp.js"></script>
    <link rel="stylesheet" href="assets/UserManagestyles.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg  bg-light mynav">
    <div class="container-fluid ">
      <a class="navbar-brand" href="http://localhost:3000/userManagement">User Management</a>
      <button class="navbar-toggler  " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="http://localhost:3000/userManagement">Home</a>
          </li>
          
        </ul>
        <form class="d-flex" role="search" action="userManagement/search" method="get">
          <input class="form-control me-2" type="search" placeholder="Search name" aria-label="Search">
          <button class="btn btn-outline-dark" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
  <h3 class="userlist mt-3 ms-5">UserList</h3>
  <form action="/userManagement/addUserPage" method="get">
  <button type="submit"class="btn btn-primary userlistbtn">AddUser</button>
  </form>
  <div class="container pt-5 pb-5">
    <table class="table table-bordered border border-primary">
      <thead>
        <tr class="text-center">
          <th scope="col">User Name</th>
          <th scope="col">Email ID</th>
          <th scope="col" >Actions</th>
        </tr>
      </thead>
      
      <tbody>
        <% for(var i in rows){ %>
        <tr class="text-center">
          <td><%= rows[i].user_name%></td>
          <td><%= rows[i].user_Eid %></td>
          
          <td  class="text-center">
            <a href="/viewUserPage/<%= rows[i].user_Eid %>" type="button" class="btn btn-light btn-small btn-outline-dark">view</a>
            <a href="/editUserPage/<%= rows[i].user_Eid %>" type="button" class="btn btn-light btn-small btn-outline-dark">Edit</a>
            <a href="/deleteUserPage/<%= rows[i].user_Eid %>" type="button" class="btn btn-light btn-small btn-outline-dark"  onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>